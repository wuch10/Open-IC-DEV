# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.json]
indent_size = 4

[Makefile]
indent_style = tab

[*.{v,vh,sv,svh,sva,svi,svp}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 4
